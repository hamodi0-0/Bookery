<%- include("partials/header.ejs") %>

<% if (locals.reviews.length > 0){ %>
    <div class="container p-3 m-5">
        <h1 class="fw-bold"> Your Reviews</h1>
        <% locals.reviews.forEach(review => { %>        
                <!-- Review Section -->
                <div class="row bg-white shadow-sm rounded-3 mb-4 p-3 align-items-start">
                    <div class="col-md-3 text-center">
                        <img src=<%= review.cover_link %> class="img-fluid rounded" >
                    </div>
                    <div class="col-md-9">
                        <h5 class="mb-1"><%= review.title %></h5>
                        <p class="text-muted mb-2"><%= review.author %></p>
                        <div class="border border-black rounded-3 px-3 py-1" style="height: 200px; width: 500px;">
                            <p>
                                <%= review.review %>
                            </p>
                        </div>
                        <div class="d-flex gap-1">
                            <% for (let i = 1; i <= review.stars ; i++) { %>
                                <span class="text-warning" style="cursor:pointer; font-size: 2.5rem;">&#9733;</span>
                            <%} %>

                            <% for (let i=1; i <= 5 - review.stars ; i++) { %>
                                <span style="cursor:pointer; font-size: 2.5rem; color: #ccc;">&#9733;</span>
                                <%} %>
                        </div>
                        <!-- buttons -->
                        <div class="d-flex flex-columns gap-2">
                            <a href="/delete?reviewId=<%= review.id %>">
                                <button class="btn btn-danger">delete</button>
                            </a>
                            <button class="btn btn-primary">update</button>
                        </div>
                    </div>
                    
                </div>        
           
    <% }); %>
    </div>
    <% } else {%>
        <div class="align-content-center justify-content-center min-vh-100">
            <div class="row mx-auto w-50 rounded-pill bg-light text-center">
                <h1 class="fw-bold"> No reviews yet.</h1>
                <div class="text-center py-5">
                            <img src="https://img.freepik.com/premium-vector/people-see-binocular-got-404-error-found-concept-illustration-404-found-pages_258153-323.jpg">
                </div>
            </div>
        </div>
    <% } %>

<%- include("partials/footer.ejs") %>